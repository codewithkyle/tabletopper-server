{
    "compilerOptions": {
        "target": "ES2021",
        "lib": [
            "ES2020"
        ],
        "allowJs": false,
        "checkJs": false,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": ["dist"]
}